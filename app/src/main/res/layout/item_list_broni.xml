<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    tools:layout_editor_absoluteX="-51dp"
    tools:layout_editor_absoluteY="0dp">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="319dp"
        android:layout_height="456dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115"
        app:srcCompat="@drawable/framecard" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="267dp"
        android:layout_height="139dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/image1"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textViewCity" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonUnBook"
        style="@style/CustomButtonStyle2"
        android:layout_width="247dp"
        android:layout_height="47dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="20dp"
        android:text="Отменить"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textViewCity"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center"
        android:text="Город"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textViewIn"
        android:layout_width="147dp"
        android:layout_height="26dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="108dp"
        android:gravity="center"
        android:text="По 27.02.2002"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textViewOut"
        android:layout_width="148dp"
        android:layout_height="26dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="108dp"
        android:gravity="center"
        android:text="C 18.02.2002"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textViewGuests"
        android:layout_width="176dp"
        android:layout_height="32dp"

        android:layout_marginTop="40dp"
        android:layout_marginEnd="72dp"
        android:gravity="center|center_horizontal"
        android:text="Отель на 2 гостя"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>