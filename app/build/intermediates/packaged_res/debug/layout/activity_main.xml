<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="415dp"
        android:layout_height="157dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kurort2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="161dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:color="@color/white"
        android:text="Room-Reserve"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="232dp"
        android:text="Куда поедете?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <Spinner
        android:id="@+id/spinnerCity"
        style="@style/CustomEditTextStyle"
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/TextArrive"
        style="@style/CustomEditTextStyle"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="36dp"
        android:text="Заезд"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/TextDeparture"
        style="@style/CustomEditTextStyle"
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="36dp"
        android:text="Выезд"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/editTextGuests"
        style="@style/CustomEditTextStyle"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:hint="2 взрослых"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="176dp"
        android:text="Когда прилетаем?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCity" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="168dp"
        android:layout_height="31dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="196dp"
        android:text="Сколько гостей?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextDeparture" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/CustomButtonStyle"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="60dp"
        android:onClick="getInfo"
        android:text="Поиск"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextGuests" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="176dp"
        android:text="Когда отъезд?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextArrive" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="227dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="92dp"
        android:text="Go on an unforgettable trip with the whole family!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/iconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="375dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:onClick="toInfo"
        android:src="@drawable/baseline_perm_device_information_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" /> <!-- замените на имя вашего изображения -->
        />

</androidx.constraintlayout.widget.ConstraintLayout>